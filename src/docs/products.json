{
  "openapi": "3.0.0",
  "info": {
    "title": "NcDetailing API",
    "version": "1.0.0",
    "description": "API for managing products, categories, and stock in NcDetailing."
  },
  "servers": [
    { "url": "http://localhost:3000/api" }
  ],
  "paths": {
    "/api/products": {
      "get": {
        "summary": "Get all products",
        "tags": ["Products"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "category_id",
            "in": "query",
            "required": false,
            "schema": { "type": "integer", "example": 1 },
            "description": "Filter products by category ID"
          },
          {
            "name": "name",
            "in": "query",
            "required": false,
            "schema": { "type": "string", "example": "Shampoo" },
            "description": "Filter products by name (partial match)"
          },
          {
            "name": "status",
            "in": "query",
            "description": "Filter products by status. Defaults to 'active'.",
            "schema": {
              "type": "string",
              "enum": ["active", "inactive", "all"]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Products retrieved successfully",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ProductResponseList" }
              }
            }
          },
          "401": { "description": "Unauthorized" }
        }
      },
      "post": {
        "summary": "Create a new product",
        "tags": ["Products"],
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": { "schema": { "$ref": "#/components/schemas/ProductPost" } }
          }
        },
        "responses": {
          "201": {
            "description": "Product created successfully",
            "content": {
              "application/json": { "schema": { "$ref": "#/components/schemas/ProductResponse" } }
            }
          },
          "400": { "description": "Product with this name already exists or Category not found" },
          "401": { "description": "Unauthorized" }
        }
      }
    },
    "/api/products/categories": {
      "get": {
        "summary": "Get all product categories",
        "tags": ["Products"],
        "parameters": [
          {
            "name": "status",
            "in": "query",
            "description": "Filter categories by status. Defaults to 'active'.",
            "schema": {
              "type": "string",
              "enum": ["active", "inactive", "all"]
            }
          }
        ],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "Categories retrieved successfully",
            "content": {
              "application/json": { "schema": { "$ref": "#/components/schemas/CategoriesResponseList" } }
            }
          },
          "401": { "description": "Unauthorized" }
        }
      }
    },
    "/api/products/category": {
      "post": {
        "summary": "Create a new product category",
        "tags": ["Products"],
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": { "application/json": { "schema": { "$ref": "#/components/schemas/CategoryPost" } } }
        },
        "responses": {
          "201": {
            "description": "Category created successfully",
            "content": { "application/json": { "schema": { "$ref": "#/components/schemas/CategoryResponse" } } }
          },
          "400": { "description": "Category with this name already exists" },
          "401": { "description": "Unauthorized" }
        }
      }
    },
    "/api/products/category/{id}": {
      "get": {
        "summary": "Get product category by ID",
        "tags": ["Products"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "integer", "example": 1 } }
        ],
        "responses": {
          "200": { "description": "Category retrieved successfully", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/CategoryResponse" } } } },
          "401": { "description": "Unauthorized" },
          "404": { "description": "Category not found" }
        }
      },
      "put": {
        "summary": "Update a product category",
        "tags": ["Products"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "integer", "example": 1 } }
        ],
        "requestBody": {
          "required": true,
          "content": { "application/json": { "schema": { "$ref": "#/components/schemas/CategoryPost" } } }
        },
        "responses": {
          "200": {
            "description": "Category updated successfully",
            "content": { "application/json": { "schema": { "$ref": "#/components/schemas/CategoryResponse" } } }
          },
          "401": { "description": "Unauthorized" },
          "404": { "description": "Category not found" },
          "409": { "description": "Another category with this name already exists" }
        }
      },
      "delete": {
        "summary": "Delete a product category",
        "tags": ["Products"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "integer", "example": 1 } }
        ],
        "responses": {
          "200": {
            "description": "Category deleted successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": { "type": "string", "example": "Category deleted successfully" }
                  }
                }
              }
            }
          },
          "401": { "description": "Unauthorized" },
          "404": { "description": "Category not found" },
          "409": { "description": "Category is in use by products and cannot be deleted" }
        }
      },
      "patch": {
        "summary": "Restore a soft-deleted product category (admin only)",
        "tags": ["Products"],
        "security": [
          { "bearerAuth": [] }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "The ID of the product category to restore.",
            "schema": { "type": "integer", "example": 1 }
          }
        ],
        "responses": {
          "200": {
            "description": "Product category restored successfully",
            "content": {
              "application/json": { "schema": { "$ref": "#/components/schemas/CategoryResponse" } }
            }
          },
          "401": { "description": "Unauthorized" },
          "404": { "description": "Inactive product category not found or is already active." }
        }
      }
    },
    "/api/products/{id}": {
      "get": {
        "summary": "Get product by ID",
        "tags": ["Products"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "integer", "example": 1 } }
        ],
        "responses": {
          "200": { "description": "Product retrieved successfully", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/ProductResponse" } } } },
          "401": { "description": "Unauthorized" },
          "404": { "description": "Product not found" }
        }
      },
      "put": {
        "summary": "Update a product",
        "tags": ["Products"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "integer", "example": 1 } }
        ],
        "requestBody": {
          "required": true,
          "content": { "application/json": { "schema": { "$ref": "#/components/schemas/ProductPut" } } }
        },
        "responses": {
          "200": { "description": "Product updated successfully", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/ProductResponse" } } } },
          "401": { "description": "Unauthorized" },
          "404": { "description": "Product not found" }
        }
      },
      "delete": {
        "summary": "Delete a product",
        "tags": ["Products"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "integer", "example": 1 } }
        ],
        "responses": {
          "200": { "description": "Product deleted successfully", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/ProductResponse" } } } },
          "401": { "description": "Unauthorized" },
          "404": { "description": "Product not found" }
        }
      }
    },
    "/api/products/{id}/restore": {
        "patch": {
            "summary": "Restore a soft-deleted product (admin only)",
            "tags": ["Products"],
            "security": [
                { "bearerAuth": [] }
            ],
            "parameters": [
                {
                    "name": "id",
                    "in": "path",
                    "required": true,
                    "description": "The ID of the product to restore.",
                    "schema": { "type": "integer", "example": 1 }
                }
            ],
            "responses": {
                "200": {
                    "description": "Product restored successfully",
                    "content": {
                        "application/json": { "schema": { "$ref": "#/components/schemas/ProductResponse" } }
                    }
                },
                "401": { "description": "Unauthorized" },
                "404": { "description": "Inactive product not found or is already active." }
            }
        }
    }
  },
  "components": {
    "schemas": {
      "CategoryPost": { "type": "object", "properties": { "name": { "type": "string", "example": "Interior Cleaning" } }, "required": ["name"] },
      "CategoryResponse": { "type": "object", "properties": { "message": { "type": "string", "example": "Category created successfully" }, "data": { "type": "object", "properties": { "id": { "type": "integer", "example": 1 }, "name": { "type": "string", "example": "Interior Cleaning" } } } } },
      "Product": { "type": "object", "properties": { "id": { "type": "integer", "example": 1 }, "name": { "type": "string", "example": "Car Shampoo" }, "price": { "type": "number", "format": "float", "example": 15.99 }, "stock": { "type": "integer", "example": 50 }, "min_stock": { "type": "integer", "example": 10 }, "category": { "type": "string", "example": "Exterior Cleaning" }, "lowStock": { "type": "boolean", "example": false, "readOnly": true } } },
      "ProductPost": { "type": "object", "properties": { "name": { "type": "string", "example": "Carnauba Wax" }, "price": { "type": "number", "format": "float", "example": 25.50 }, "stock": { "type": "integer", "example": 30 }, "min_stock": { "type": "integer", "example": 5 }, "category_id": { "type": "integer", "example": 1 } }, "required": ["name", "price", "stock", "min_stock", "category_id"] },
      "ProductPut": { "type": "object", "properties": { "name": { "type": "string", "example": "Premium Carnauba Wax" }, "price": { "type": "number", "format": "float", "example": 29.99 }, "stock": { "type": "integer", "example": 35 }, "min_stock": { "type": "integer", "example": 7 }, "category_id": { "type": "integer", "example": 1 } } },
      "ProductResponse": { "type": "object", "properties": { "message": { "type": "string", "example": "Product created/updated/retrieved successfully" }, "data": { "$ref": "#/components/schemas/Product" } } },
      "ProductResponseList": { "type": "object", "properties": { "message": { "type": "string", "example": "Products retrieved successfully" }, "data": { "type": "array", "items": { "$ref": "#/components/schemas/Product" } } } },
      "CategoriesResponseList": { "type": "object", "properties": { "message": { "type": "string", "example": "Categories retrieved successfully" }, "data": { "type": "array", "items": { "type": "object", "properties": { "id": { "type": "integer", "example": 1 }, "name": { "type": "string", "example": "Interior Cleaning" } } } } } }
    },
    "securitySchemes": {
      "bearerAuth": { "type": "http", "scheme": "bearer", "bearerFormat": "JWT" }
    }
  }
}
