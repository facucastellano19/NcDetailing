{
  "paths": {
    "/api/products": {
      "get": {
        "summary": "Get all products",
        "tags": ["Products"],
        "security": [
          { "bearerAuth": [] }
        ],
        "responses": {
          "200": {
            "description": "Products retrieved successfully",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ProductResponseList" }
              }
            }
          },
          "401": { "description": "Unauthorized" }
        }
      },
      "post": {
        "summary": "Create a new product",
        "tags": ["Products"],
        "security": [
          { "bearerAuth": [] }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/ProductPost" }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Product created successfully",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ProductResponse" }
              }
            }
          },
          "400": { "description": "Product with this name already exists or Category not found" },
          "401": { "description": "Unauthorized" }
        }
      }
    },
    "/api/products/category": {
      "post": {
        "summary": "Create a new product category",
        "tags": ["Products"],
        "security": [
          { "bearerAuth": [] }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/CategoryPost" }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Category created successfully",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/CategoryResponse" }
              }
            }
          },
          "400": { "description": "Category with this name already exists" },
          "401": { "description": "Unauthorized" }
        }
      }
    },
    "/api/products/{id}": {
      "get": {
        "summary": "Get product by ID",
        "tags": ["Products"],
        "security": [
          { "bearerAuth": [] }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer", "example": 1 }
          }
        ],
        "responses": {
          "200": {
            "description": "Product retrieved successfully",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ProductResponse" }
              }
            }
          },
          "401": { "description": "Unauthorized" },
          "404": { "description": "Product not found" }
        }
      },
      "put": {
        "summary": "Update a product",
        "tags": ["Products"],
        "security": [
          { "bearerAuth": [] }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer", "example": 1 }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/ProductPut" }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Product updated successfully",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ProductResponse" }
              }
            }
          },
          "401": { "description": "Unauthorized" },
          "404": { "description": "Product not found" }
        }
      },
      "delete": {
        "summary": "Delete a product",
        "tags": ["Products"],
        "security": [
          { "bearerAuth": [] }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer", "example": 1 }
          }
        ],
        "responses": {
          "200": {
            "description": "Product deleted successfully",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ProductResponse" }
              }
            }
          },
          "401": { "description": "Unauthorized" },
          "404": { "description": "Product not found" }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "CategoryPost": {
        "type": "object",
        "properties": {
          "name": { "type": "string", "example": "Limpieza Interior" }
        },
        "required": ["name"]
      },
      "CategoryResponse": {
        "type": "object",
        "properties": {
          "message": { "type": "string", "example": "Category created successfully" },
          "data": {
            "type": "object",
            "properties": {
              "id": { "type": "integer", "example": 1 },
              "name": { "type": "string", "example": "Limpieza Interior" }
            }
          }
        }
      },
      "Product": {
        "type": "object",
        "properties": {
          "id": { "type": "integer", "example": 1 },
          "name": { "type": "string", "example": "Shampoo para autos" },
          "description": { "type": "string", "example": "Shampoo concentrado para lavado de autos" },
          "price": { "type": "number", "format": "float", "example": 15.99 },
          "stock": { "type": "integer", "example": 50 },
          "min_stock": { "type": "integer", "example": 10 },
          "category": { "type": "string", "example": "Limpieza Exterior" },
          "lowStock": { "type": "boolean", "example": false, "readOnly": true }
        }
      },
      "ProductPost": {
        "type": "object",
        "properties": {
          "name": { "type": "string", "example": "Cera de Carnauba" },
          "description": { "type": "string", "example": "Cera de alta calidad para brillo y protección" },
          "price": { "type": "number", "format": "float", "example": 25.50 },
          "stock": { "type": "integer", "example": 30 },
          "min_stock": { "type": "integer", "example": 5 },
          "category_id": { "type": "integer", "example": 1 }
        },
        "required": ["name", "price", "stock", "min_stock", "category_id"]
      },
      "ProductPut": {
        "type": "object",
        "properties": {
          "name": { "type": "string", "example": "Cera de Carnauba Premium" },
          "description": { "type": "string", "example": "Cera de alta calidad para brillo y protección mejorada" },
          "price": { "type": "number", "format": "float", "example": 29.99 },
          "stock": { "type": "integer", "example": 35 },
          "min_stock": { "type": "integer", "example": 7 },
          "category_id": { "type": "integer", "example": 1 }
        }
      },
      "ProductResponse": {
        "type": "object",
        "properties": {
          "message": { "type": "string", "example": "Product created/updated/retrieved successfully" },
          "data": { "$ref": "#/components/schemas/Product" }
        }
      },
      "ProductResponseList": {
        "type": "object",
        "properties": {
          "message": { "type": "string", "example": "Products retrieved successfully" },
          "data": {
            "type": "array",
            "items": { "$ref": "#/components/schemas/Product" }
          }
        }
      }
    }
  }
}