{
    "tags": [
      {
        "name": "Home",
        "description": "Endpoints related to the home dashboard."
      }
    ],
    "paths": {
      "/api/home": {
        "get": {
          "summary": "Get data for the home dashboard",
          "description": "Retrieves summary cards and recent sales activity for the main dashboard.",
          "tags": ["Home"],
          "security": [
            {
              "bearerAuth": []
            }
          ],
          "responses": {
            "200": {
              "description": "Home data retrieved successfully.",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/HomeDashboard"
                  }
                }
              }
            },
            "401": {
              "description": "Unauthorized. Token is missing or invalid."
            },
            "403": {
              "description": "Forbidden. Insufficient privileges."
            }
          }
        }
      }
    },
    "components": {
      "schemas": {
        "HomeDashboard": {
          "type": "object",
          "properties": {
            "summary": {
              "type": "object",
              "properties": {
                "totalSales": { "type": "integer", "example": 15 },
                "confirmedPayments": { "type": "integer", "example": 10 },
                "pendingPayments": { "type": "integer", "example": 5 }
              }
            },
            "recentActivity": {
              "type": "object",
              "properties": {
                "services": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/RecentServiceSale" }
                },
                "products": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/RecentProductSale" }
                }
              }
            }
          }
        },
        "RecentServiceSale": {
          "type": "object",
          "properties": {
            "sale_id": { "type": "integer", "example": 101 },
            "client_name": { "type": "string", "example": "John Doe" },
            "sale_time": { "type": "string", "format": "time", "example": "10:30:00" },
            "sale_total": { "type": "number", "format": "decimal", "example": 150.00 },
            "service_status": { "type": "string", "example": "Completed" },
            "services": { "type": "string", "example": "Premium Wash, Waxing" }
          }
        },
        "RecentProductSale": {
          "type": "object",
          "properties": {
            "sale_id": { "type": "integer", "example": 102 },
            "client_name": { "type": "string", "example": "Jane Smith" },
            "sale_time": { "type": "string", "format": "time", "example": "11:45:00" },
            "sale_total": { "type": "number", "format": "decimal", "example": 75.50 },
            "payment_status": { "type": "string", "example": "Paid" },
            "products": {
              "type": "array",
              "description": "List of products included in this sale.",
              "items": { "$ref": "#/components/schemas/ProductSaleDetail" }
            }
          }
        },
        "ProductSaleDetail": {
          "type": "object",
          "properties": {
            "product_name": { "type": "string", "example": "Car Wax" },
            "quantity": { "type": "integer", "example": 1 },
            "unit_price": { "type": "number", "format": "decimal", "example": 25.50 },
            "subtotal": { "type": "number", "format": "decimal", "example": 25.50 }
          }
        }
      }
    }
  }
  